<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smart_watch_2_control_width"
    android:layout_height="@dimen/smart_watch_2_control_height"
    android:background="@android:color/black"
    tools:ignore="ContentDescription,PxUsage" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="6px"
        android:clickable="true"
        android:src="@drawable/icon_extension48" />

    <TextView
        android:id="@+id/btn_show_bitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6px"
        android:layout_toRightOf="@+id/image"
        android:background="@android:color/white"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/text_show_bitmap"
        android:textColor="@android:color/black"
        android:textSize="@dimen/smart_watch_2_text_size_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image"
        android:weightSum="2" >

        <TextView
            android:id="@+id/btn_update_this"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/text_tap_to_update"
            android:textColor="@android:color/black"
            android:textSize="@dimen/smart_watch_2_text_size_large" />

        <TextView
            android:id="@+id/btn_update_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6px"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/reset_layout"
            android:textColor="@android:color/black"
            android:textSize="@dimen/smart_watch_2_text_size_large" />
    </LinearLayout>

</RelativeLayout>